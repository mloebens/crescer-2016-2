@model LojaDeItens.Web.Models.ItemMagico.ItemParaEdicaoViewModel
@{
    string titulo = Model == null ? "Criar Novo Item" : "Editar";
    ViewBag.Title = titulo;
}

<h2>@titulo</h2>

<div>
    @using (Ajax.BeginForm("Salvar", "ItemMagico", new AjaxOptions
    {
        HttpMethod = "Post",
        OnSuccess = "itemMagicoEditar.sucessoNoCadastro"
    }))
    {

        @Html.AntiForgeryToken()
        <div class="alert-danger erros">
            @Html.ValidationSummary()
        </div>

        <div class="form-group row">
            <div class="col-md-1">
                @Html.LabelFor(m => m.Nome)
            </div>
            <div class="col-md-11">
                @Html.TextBoxFor(m => m.Nome)
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-1">
                @Html.LabelFor(m => m.Descricao)
            </div>
            <div class="col-md-11">
                @Html.TextBoxFor(m => m.Descricao)
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-1">
                @Html.LabelFor(m => m.Preco)
            </div>
            <div class="col-md-11">
                @Html.TextBoxFor(m => m.Preco, new { data_val_number ="O valor deve ter o formato 0,00." })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-1">
                @Html.LabelFor(m => m.Estoque)
            </div>
            <div class="col-md-11">
                @Html.TextBoxFor(m => m.Estoque, new { data_val_number = "O deve ser um inteiro." })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-1">
                @Html.LabelFor(m => m.Raro)
            </div>
            <div class="col-md-11">
                @Html.CheckBoxFor(m => m.Raro)
            </div>
        </div>


            <button type="submit">Salvar</button>
    }
</div>

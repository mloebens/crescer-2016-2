@model StreetFighter.Web.Models.PersonagemModel

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="conteudo-corpo">
        <h2>Cadastro de Personagem</h2>

        <div class="informacoes">

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nome)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nascimento, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Nascimento, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nascimento)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Altura, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Altura, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Altura)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Peso, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Peso, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Peso)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Origem, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Origem, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Origem)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GolpesEspeciaisFamosos, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.GolpesEspeciaisFamosos, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GolpesEspeciaisFamosos)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PersonagemOculto, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.PersonagemOculto, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PersonagemOculto)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Salvar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="conteudo-corpo">
    <h2>Realize o Login</h2>

    <div class="informacoes">
        @using (Html.BeginForm("FazerLogin", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="form-horizontal">
                <div class="row">
                    <div class="form-group">
                        @Html.Label("usuario", "Usuário: ", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBox("Usuario", "", new { @class = "col-sm-2 form-control", placeholder = "Usuário" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        @Html.Label("senha", "Senha: ", new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBox("senha", "", new { @class = "col-sm-2 form-control", placeholder = "Senha" })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-default">Entrar</button>
            </div>
        }
     </div>
</div>

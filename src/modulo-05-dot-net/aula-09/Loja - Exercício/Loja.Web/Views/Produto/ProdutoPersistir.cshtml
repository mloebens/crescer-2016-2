@model Loja.Web.Models.ProdutoModel

@{
    ViewBag.Title = "";
}
<h2>Persistir</h2>


@using (Html.BeginForm("Salvar", "Produto", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
    </div>
    <div>
        @Html.TextBoxFor(model => model.Nome, new { placeholder = "Nome do Produto" })
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <div>
        @Html.TextBoxFor(model => model.Valor, new { placeholder = "Valor" })
        @Html.ValidationMessageFor(model => model.Valor)
    </div>

    <button type="submit">Salvar</button>
}

@section scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jQuery.validate.rules.js"></script>
}
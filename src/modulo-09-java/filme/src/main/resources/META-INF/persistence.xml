<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="crescer" transaction-type="JTA">
    <jta-data-source>java:app/crescer</jta-data-source>
    <class>br.com.cwi.crescer.filme.Entity.Ator</class>
    <class>br.com.cwi.crescer.filme.Entity.Classificacao</class>
    <class>br.com.cwi.crescer.filme.Entity.Elenco</class>
    <class>br.com.cwi.crescer.filme.Entity.Genero</class>
    <class>br.com.cwi.crescer.filme.Entity.Idioma</class>
    <class>br.com.cwi.crescer.filme.Entity.Filme</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <!--Descomentar para criar recriar as tabela.-->
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
